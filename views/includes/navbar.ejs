<style>
  /* Navbar */
  .navbar {
    background-color: #fff !important;
    height: 80px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 0.5rem 2rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Brand Icon */
  .navbar-brand i {
    font-size: 2rem;
    color: #fe424d;
  }

  /* Navbar Links */
  .nav-link {
    font-weight: 600;
    color: #2c3e50 !important;
    margin-right: 1.5rem;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: #fe424d !important;
    text-decoration: underline;
  }

  /* Search Box */
  .search-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .search-inp {
    border-radius: 50px;
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    width: 250px;
    transition: all 0.3s ease;
  }

  .search-inp:focus {
    outline: none;
    border-color: #fe424d;
    box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.2);
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 50px;
    padding: 0.5rem 1.3rem;
    border: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background-color: #d9343b;
    color: #fff;
  }

  /* Auth Buttons */
  .btn-auth {
    text-decoration: none;
    background-color: #fff;
    border-radius: 50px;
    padding: 0.4rem 1.2rem;
    border: 1px solid #fe424d;
    color: #fe424d;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-auth:hover {
    background-color: #fe424d;
    color: #fff;
    text-decoration: none;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .search-inp {
      width: 180px;
    }

    .search-btn {
      padding: 0.45rem 1rem;
    }

    .nav-link {
      margin-right: 1rem;
    }

    .navbar-nav {
      margin-top: 0.5rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>

    <!-- Hamburger -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links & Actions -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="d-flex flex-column flex-md-row w-100 justify-content-between align-items-center">

        <!-- Left Links -->
        <div class="navbar-nav mb-2 mb-md-0">
          <a class="nav-link" href="/"><b>Home</b></a>
          <a class="nav-link" href="/listings"><b>Explore</b></a>
          <a class="nav-link" href="/listings/new"><b>Add Your Favourite</b></a>
        </div>

        <!-- Right: Search + Auth -->
        <div class="d-flex align-items-center mt-2 mt-md-0 gap-3">
          <!-- Search Form -->
          <form class="search-form" role="search" action="/listings" method="GET">
            <input class="form-control search-inp" name="search" type="search" placeholder="Search destinations..."
              value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" />
            <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>
        </div>

        <!-- Auth Buttons -->
        <div class="d-flex align-items-center gap-2">
          <% if(!currUser) { %>
            <a href="/signup" class="btn-auth">Sign Up</a>
            <a href="/login" class="btn-auth">Log In</a>
            <% } else { %>
              <a href="/logout" class="btn btn-dark">Log Out</a>
              <% } %>
        </div>

      </div>
    </div>
  </div>
</nav>