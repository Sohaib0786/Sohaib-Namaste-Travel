<style>
  .flash-alert {
    border-radius: 10px;
    padding: 1rem 1.5rem;
    margin-top: 2rem;
    font-weight: 500;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .flash-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .flash-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .flash-alert .btn-close {
    position: absolute;
    top: 0.5rem;
    right: 1rem;
  }
</style>

<% if (success && success.length) { %>
  <div class="flash-alert flash-success col-6 offset-3 alert-dismissible fade show" role="alert">
    <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>

    <% if (error && error.length) { %>
      <div class="flash-alert flash-error col-6 offset-3 alert-dismissible fade show" role="alert">
        <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>