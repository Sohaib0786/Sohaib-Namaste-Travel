<% layout("/layouts/boilerplate") %>

  <style>
    /* =======================
   Filters Section
======================= */
    #filters {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-top: 2rem;
      padding: 0.5rem 0;
      overflow-x: auto;
      /* horizontal scroll */
      overflow-y: hidden;
      white-space: nowrap;
      /* prevent wrapping */
      scrollbar-width: none;
      /* Firefox */
    }

    #filters::-webkit-scrollbar {
      display: none;
      /* Chrome, Safari */
    }

    .filter {
      flex: 0 0 auto;
      /* prevent shrinking */
      text-align: center;
      padding: 0.7rem 1rem;
      border-radius: 10px;
      background: #f7f7f7;
      transition: all 0.3s ease;
      cursor: pointer;
      opacity: 0.7;
      min-width: 90px;
      font-size: 0.9rem;
    }

    .filter:hover,
    .filter.active {
      opacity: 1;
      background-color: #fe424d;
      color: #fff;
    }

    /* Tax toggle */
    .tax-toggle {
      flex: 0 0 auto;
      border: 1px solid #ccc;
      border-radius: 1rem;
      padding: 0.5rem 1rem;
      display: flex;
      align-items: center;
      cursor: pointer;
      opacity: 0.8;
      transition: opacity 0.3s ease;
      background: #fff;
    }

    .tax-toggle:hover {
      opacity: 1;
    }

    .tax-info {
      display: none;
      font-size: 0.85rem;
      color: #555;
    }

    /* Listings Grid */
    .listing-card {
      margin-bottom: 2rem;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .listing-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
      object-fit: cover;
      height: 20rem;
    }
  </style>

  <!-- =====================
     Filters Section
===================== -->
  <div id="filters">
    <div class="filter active" data-category="all">
      <i class="fa-solid fa-th-large"></i>
      <p>All</p>
    </div>
    <div class="filter" data-category="Trending">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter" data-category="Rooms">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter" data-category="Iconic Cities">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </div>
    <div class="filter" data-category="Mountains">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter" data-category="Castles">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter" data-category="Amazing Pools">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>
    <div class="filter" data-category="Camping">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="filter" data-category="Farms">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div class="filter" data-category="Arctic">
      <i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter" data-category="Dome">
      <i class="fa-solid fa-igloo"></i>
      <p>Dome</p>
    </div>
    <div class="filter" data-category="Boat">
      <i class="fa-solid fa-sailboat"></i>
      <p>Boat</p>
    </div>

    <!-- Tax Toggle -->
    <div class="tax-toggle ms-3">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label ms-2" for="flexSwitchCheckDefault">
          Display total after Taxes
        </label>
      </div>
    </div>
  </div>

  <!-- =====================
       Listings Grid
    ===================== -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4" id="listingGrid">
    <% allListings.forEach(listing=> { %>
      <div class="col mb-4 listing-item" data-category="<%= listing.category || 'others' %>">
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
          <div class="card listing-card shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
            <div class="card-body">
              <p class="card-text mb-1">
                <b>
                  <%= listing.title %>
                </b>
              </p>
              <p class="card-text">
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                  <i class="tax-info"> +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
  </div>

  <script>
    // =====================
    // Tax toggle logic
    // =====================
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("change", () => {
      const taxInfoElements = document.querySelectorAll(".tax-info");
      taxInfoElements.forEach(el => {
        el.style.display = taxSwitch.checked ? "inline" : "none";
      });
    });

    // =====================
    // Filter logic
    // =====================
    const filters = document.querySelectorAll(".filter");
    const listings = document.querySelectorAll(".listing-item");

    filters.forEach(filter => {
      filter.addEventListener("click", () => {
        const category = filter.dataset.category;

        // Toggle active class
        filters.forEach(f => f.classList.remove("active"));
        filter.classList.add("active");

        // Show/Hide listings
        listings.forEach(listing => {
          if (category === 'all' || listing.dataset.category === category) {
            listing.style.display = "block";
          } else {
            listing.style.display = "none";
          }
        });
      });
    });
  </script>