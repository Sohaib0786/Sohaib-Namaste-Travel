<% layout("/layouts/boilerplate") %>

  <style>
    /* HERO SECTION */
    .hero {
      height: 100vh;
      background-image: linear-gradient(rgba(0, 0, 0, 0.6),
          rgba(0, 0, 0, 0.6)),
        url("https://static01.nyt.com/images/2017/12/02/travel/360-7wondercomposite/360-7wondercomposite-videoSixteenByNineJumbo1600-v2.jpg");
      background-size: cover;
      background-position: center;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: #ffffff;
    }

    .hero-content {
      max-width: 800px;
      padding: 20px;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 700;
      letter-spacing: 2px;
    }

    .hero h2 {
      font-size: 2.2rem;
      margin-top: 10px;
      font-weight: 500;
    }

    .typed-text {
      color: #2ecc71;
    }

    .hero p {
      margin-top: 20px;
      font-size: 1.2rem;
      opacity: 0.9;
    }

    /* BUTTON */
    .hero-btn {
      margin-top: 30px;
      padding: 12px 30px;
      font-size: 1.1rem;
      border-radius: 30px;
      background-color: #2ecc71;
      border: none;
      color: #fff;
      transition: all 0.3s ease;
    }

    .hero-btn:hover {
      background-color: #27ae60;
      transform: translateY(-2px);
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2.4rem;
      }

      .hero h2 {
        font-size: 1.6rem;
      }
    }
  </style>

  <div class="hero">
    <div class="hero-content">
      <h1>WELCOME TO</h1>

      <h2>
        <span class="typed-text" id="brandText"></span>
      </h2>

      <p>
        Come here to explore the world with unforgettable journeys and
        beautiful destinations.
      </p>

      <a href="/listings" class="btn hero-btn">
        Explore Now üåç
      </a>
    </div>
  </div>

  <!-- Typed.js -->
  <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>

  <script>
    new Typed("#brandText", {
      strings: ["NAMASTE TRAVEL ‚úàÔ∏è", "YOUR TRAVEL PARTNER üåé"],
      typeSpeed: 80,
      backSpeed: 50,
      loop: true,
    });
  </script>